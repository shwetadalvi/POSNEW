<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:background="@color/brown">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="20dp">

    <RelativeLayout
        android:id="@+id/layoutSpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        >

        <com.abremiratesintl.KOT.views.CustomSpinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:background="@null" />

        <ImageView
            android:id="@+id/spinner_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/spinner1"
            app:srcCompat="@drawable/ic_arrow_down" />
    </RelativeLayout>
        <EditText
            android:id="@+id/cash"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:hint="@string/cash"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/grey"
            android:textColorLink="#ffffff"
            android:theme="@style/AppTheme.EditText"
            android:layout_margin="20dp"
       />

        <EditText
            android:id="@+id/card"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/card"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/grey"
            android:textColorLink="#ffffff"
            android:layout_margin="20dp"
            android:theme="@style/AppTheme.EditText"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <TextView

        android:id="@+id/textChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_margin="10dp"
        android:padding="5dp"

        android:text="Change : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
       />

    <EditText
        android:id="@+id/edtChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:hint="change"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/grey"
        android:textColorLink="#ffffff"
        android:theme="@style/AppTheme.EditText"
        app:layout_constraintStart_toEndOf="@+id/textChange"
        app:layout_constraintTop_toBottomOf="@+id/cash" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Balance : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/edtChange"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <EditText
        android:id="@+id/edtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:hint="Balance"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/grey"
        android:textColorLink="#ffffff"
        android:theme="@style/AppTheme.EditText"
        app:layout_constraintStart_toEndOf="@+id/textBalance"
        app:layout_constraintTop_toBottomOf="@+id/card" />
    </LinearLayout>

</RelativeLayout>