<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
 
        android:padding="5dp"
        android:weightSum="6"
      >

        <TextView
            android:id="@+id/slNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:text="@string/slNo"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/inv_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:text="@string/invoive_no"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.2"
            android:padding="5dp"
            android:text="@string/date"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/vatable_amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:padding="5dp"
            android:text="Vatable Amt"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/vat_amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Vat Amt"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/net_amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="5dp"
            android:text="Net Amt"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>
</LinearLayout>
